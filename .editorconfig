# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*.{nlf,nsh}]
end_of_line = crlf
charset = utf-8-bom
trim_trailing_whitespace = true
insert_final_newline = true
indent_style = space
indent_size = 2

[*.sln]
end_of_line = crlf
charset = utf-8-bom
trim_trailing_whitespace = true
insert_final_newline = true
indent_style = tab
indent_size = 2

[*.nsi]
end_of_line = crlf
charset = utf-16le
trim_trailing_whitespace = true
insert_final_newline = true
indent_style = tab
indent_size = 2

[*.rc]
end_of_line = crlf
charset = utf-16le
trim_trailing_whitespace = true
insert_final_newline = true
indent_style = space
indent_size = 4

[*.{cmd,vcproj}]
end_of_line = crlf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
indent_style = tab
indent_size = 2

[*.{c,cpp,dpr,dsp,dsw,filters,h,inc,ini,html,pas,txt,vcxproj,yml}]
end_of_line = crlf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
indent_style = space
indent_size = 2

[*.md]
end_of_line = crlf
charset = utf-8
trim_trailing_whitespace = false
insert_final_newline = true
indent_style = space
indent_size = 2
